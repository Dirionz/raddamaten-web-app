extends ../layout

block content

    .div(id='baseurl' data-internalbaseurl='/restaurant/products/')

    //.row
        .col-xs-6.col-sm-3.col-md-2
            div(class='product-img' style='background-image: url(' + restaurant.pictureURL + ')')
        .col-xs-6.col-sm-4.col-md-5
            h2 #{restaurant.name}
            p #{restaurant.aboutUs}
            p
                a.btn.btn-default(href='/restaurant/product', role='button') Add product
                a.btn.btn-default(href='/restaurant/edit', role='button') Edit Restaurant
                a.btn.btn-default(href='/restaurant/orders', role='button') Orders
        .col-xs-3.col-sm-4.col-md-5
            br
            p <b>Street:</b> #{restaurant.street}
            p <b>Postal code:</b> #{restaurant.postalCode}
            p <b>City:</b> #{restaurant.city}
    .row
        .restaurant-container.col-xs-12.col-md-10.col-md-offset-1
            .material-header
                a.btn.btn-default(href='/restaurant/product', role='button') Lägg till produkt
                a.btn.btn-default(href='/restaurant/edit', role='button') Ändra
                a.btn.btn-default(href='/restaurant/orders', role='button') Ordrar
            .restaurant-content
                .col-xs-12.col-md-6
                    h2 #{restaurant.name}
                    p #{restaurant.aboutUs}
                .col-xs-12.col-md-6
                    .col-xs-12.col-sm-6(style='padding: 0px;')
                        h2 Address
                        p <b>Street:</b> #{restaurant.street} 
                        p <b>Postal code:</b> #{restaurant.postalCode}
                        p <b>City:</b> #{restaurant.city}
                    .col-xs-12.col-sm-6
                        h2
                        div(style='text-align: center;')
                            .img-centercrop(style='height: 105px; width: 160px; display: inline-block; background-image: url(' + restaurant.pictureURL + ')')
    hr

    div(id='productsframe')
        include products
    
    hr
    .text-center
        a.btn.pink-loadmore(id='load_more', role='button' data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Laddar") Ladda fler