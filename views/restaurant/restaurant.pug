extends ../layout

block content

    .div(id='baseurl' data-internalbaseurl='/restaurant/products/')
    .row
        .restaurant-container.col-xs-12.col-md-10.col-md-offset-1
            .material-header
                a(href='/restaurant/product', role='button' style='float:none; margin-left:6px; margin-right:6px;') Lägg till produkt
                p |
                a(href='/restaurant/edit', role='button' style='float:none; margin-left:6px; margin-right:6px;') Ändra
                p |
                a(href='/restaurant/orders', role='button', style='float:none; margin-left:6px; margin-right:6px;') Ordrar
                if (restaurant.website && restaurant.website.length > 1)
                    a(href=restaurant.website, target='_blank') Besök hemsida
            .restaurant-content
                .col-xs-12.col-md-6
                    h2 #{restaurant.name}
                    p #{restaurant.aboutUs}
                .col-xs-12.col-md-6
                    .col-xs-12.col-sm-6(style='padding: 0px;')
                        h2 Address
                        p <b>Gata:</b> #{restaurant.street} 
                        p <b>Postnummer:</b> #{restaurant.postalCode}
                        p <b>Stad:</b> #{restaurant.city}
                    .col-xs-12.col-sm-6
                        h2
                        div(style='text-align: center;')
                            .img-centercrop(style='height: 105px; width: 160px; display: inline-block; background-image: url(' + restaurant.pictureURL + ')')
    hr

    div(id='productsframe')
        include products
    
    hr
    .text-center
        a.btn.pink-loadmore(id='load_more', role='button' data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Laddar") Ladda fler