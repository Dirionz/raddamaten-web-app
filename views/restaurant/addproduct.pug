extends ../layout

block content
  .materialize-box
    .material-header
      p Lägg till produkt
    .material-body
      form.form-horizontal(role='form', method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
          label(class='col-sm-2 control-label', for='name') Namn
          .col-sm-8
            input.form-control(type='text', name='name', id='name', autofocus=true, required)
        .form-group
          label(class='col-sm-2 control-label', for='price') Pris
          .col-sm-8
            input.form-control(type='number', step="any", name='price', id='price', required)
        .form-group
          label(class='col-sm-2 control-label', for='quantity') Antal
          .col-sm-8
            input.form-control(type='number', name='quantity', id='quantity', required)
        .form-group
          label(class='col-sm-2 control-label', for='description') Beskrivning
          .col-sm-8
            textarea.form-control(name='description', id='description', rows='7', required)
        .form-group
          label(class='col-sm-2 control-label', for='startdate') Börjar att visas
          .col-sm-8
            input.form-control(type='text', name='startdate', value=date, id='date', required)
        .form-group
          label(class='col-sm-2 control-label', for='enddate') Slutar att visas
          .col-sm-8
            input.form-control(type='text', name='enddate', value=date, id='date', required)
        .form-group
          label(class='col-sm-2 control-label', for='myFile', required) Fil
          .col-sm-8
            input(id='upload' type='file', name='myFile' accept='image/*') 
        .form-group
          .col-sm-offset-2.col-sm-8
            button.btn.btn-primary(type='submit')
              i.fa.fa-envelope
              | Skapa