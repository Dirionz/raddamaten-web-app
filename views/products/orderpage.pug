extends ../layout

block content
    div
        .col-xs-12.col-sm-6.col-sm-offset-1.xs-clear-padding
            each product in products
                div
                    .product-container-horizontal
                        //.col-xs-4.col-sm-3
                        div(class='product-img-small' style='background-image: url(' + product.pictureURL + ')')
                        //.col-xs-8.col-sm-9
                        //.col-xs-6.col-sm-6
                        .product-info-horizontal
                            h4 #{product.name}
                            //p Quantity #{product.quantity} Price #{product.price} sek
                            .product-price-horizontal #{product.price} kr
                        button(class='add-product-btn' roduct._id role='button' data-productId=product._id data-orderId=order._id) +
                        button(class='info-product-btn' roduct._id role='button' data-productId=product._id data-orderId=order._id) i
                    .desctiption-horizontal.desctiption-horizontal-hidden #{product.description}
        .col-xs-12.col-sm-3.right-side
            .order-list
                .order-list-header
                    p Cart
                .orders.orders-xs-collapse
                    include order
                .checkout.checkout-xs-collapse
                    a.btn.btn-default(href='/order/checkout/'+order._id) Checkout
