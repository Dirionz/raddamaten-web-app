extends ../layout

block content
  .materialize-box
    .material-header
      p Skicka sms
    .material-body
      form.form-horizontal(role='form', method='POST' action='/admin/sms/send')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
          label(class='col-sm-2 control-label', for='text') Meddelande
          .col-sm-8
            textarea.form-control(type='text', name='text', id='text', autofocus=true, required)
        .form-group
          .col-sm-offset-2.col-sm-8
            button.btn.btn-primary(type='submit')
              i.fa.fa-envelope
              | Skicka (#{count})