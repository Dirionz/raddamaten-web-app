each restaurant in restaurants
    tr
        td #{restaurant.name}
        td #{restaurant.updatedAt}
        td
            if ((user.restaurantId) && (user.restaurantId.toString() == restaurant._id.toString()))
                span.label.label-success Pretending
            else 
                span.label.label-info Avilable
        td 
            if ((user.restaurantId) && (user.restaurantId.toString() == restaurant._id.toString()))
                form(method='POST')
                    input(type='hidden', name='_csrf', value=_csrf)
                    button.btn.btn-success(type='submit') Unpretend
            else 
                form(method='POST')
                    input(type='hidden', name='_csrf', value=_csrf)
                    input(type='hidden', name='restaurantId', value=restaurant._id)
                    button.btn.btn-success(type='submit') Pretend