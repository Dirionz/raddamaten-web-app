extends ../layout

block content
  .div(id='baseurl' data-internalbaseurl="/admin/restaurants/loadmore/")
  .materialize-box
    .material-header
      p Restauranger
    .material-body
        form
            .input-group
                input#search_param(type='hidden', name='search_param', value=search_param)
                input#search_key.form-control(type='text', name='q', placeholder='Search..', value='')
                span.input-group-btn
                    a.btn.btn-default.text-muted(href='/admin/restaurants', title='Clear')
                        i.fa.fa-times
                    button.btn.btn-info(type='submit')   Sök 

        br
        div(id='restaurantsframe')
        .row
            .span5
                table.table.table-striped.table-condensed
                    thead
                    tr
                        th Namn
                        th Datum
                        th Status
                        th
                    tbody.restaurantscontainer
                        include restaurants
        button.btn.btn-info.restaurants_load_more(data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Laddar", style="display: none;") Ladda fler